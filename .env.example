# AktieKoll Backend Environment Variables
# Copy this file to .env and fill in your values

# Database Connection
# Format: Host=hostname;Database=dbname;Username=user;Password=password;Port=5432
ConnectionStrings__PostgresConnection=Host=localhost;Database=aktiekoll;Username=postgres;Password=your_password_here

# API Security
# Generate a secure random key (use: openssl rand -base64 32)
ApiKey=your-secure-api-key-here

# Frontend CORS Configuration
# Set to your frontend domain (e.g., https://aktiekoll.com or http://localhost:3000 for development)
FrontendUrl=http://localhost:3000

# Runtime Environment
# Options: Development, Staging, Production
ASPNETCORE_ENVIRONMENT=Development
