# AktieKoll Backend Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# Docker Compose Configuration
# ============================================
# Use these variables when running with docker-compose

# PostgreSQL Database Password
# Generate a secure password for production
POSTGRES_PASSWORD=changeme123

# API Security Key
# Generate a secure random key (use: openssl rand -base64 32)
API_KEY=your-secure-api-key-here

# Frontend CORS Configuration
# Development: http://localhost:3000
# Production: https://your-frontend-domain.com
FRONTEND_URL=http://localhost:3000

# ============================================
# Manual/Native Deployment Configuration
# ============================================
# Use these variables when running without Docker

# Database Connection String
# Format: Host=hostname;Database=dbname;Username=user;Password=password;Port=5432
ConnectionStrings__PostgresConnection=Host=localhost;Database=aktiekoll;Username=postgres;Password=your_password_here

# API Security Key (same as API_KEY above)
ApiKey=your-secure-api-key-here

# Frontend CORS Configuration (same as FRONTEND_URL above)
FrontendUrl=http://localhost:3000

# Runtime Environment
# Options: Development, Staging, Production
ASPNETCORE_ENVIRONMENT=Development
